{
  "name": "soulsync-ai",
  "version": "2.0.0",
  "description": "SoulSync AI - A sophisticated AI companion for thoughtful conversations",
  "author": "Aryan B Parikh",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-fetch": "^2.7.0",
    "node-nlp": "^5.0.0-alpha.5",
    "openai": "^6.17.0",
    "sentiment": "^5.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node backend/index.js",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cross-env NODE_ENV=development node backend/index.js",
    "backend:start": "node backend/index.js",
    "build": "cd frontend && npm run build",
    "export-data": "node scripts/export-training-data.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "jest --config config/jest.server.config.js",
    "test:auth": "jest tests/integration/auth.test.js --config config/jest.server.config.js",
    "test:chat": "jest tests/integration/chat-persistence.test.js --config config/jest.server.config.js",
    "smoke": "node scripts/smoke.js",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "verify": "npm run lint && npm run test",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "deploy": "bash scripts/deploy.sh",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.0.1",
    "resolve-url-loader": "^5.0.0",
    "webpack-dev-server": "^4.15.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "react-scripts": {
      "webpack-dev-server": "^4.15.2",
      "resolve-url-loader": "^5.0.0",
      "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1"
    }
  }
}
