{
  "name": "soulsync-ai",
  "version": "2.0.0",
  "description": "SoulSync AI - A sophisticated AI companion for thoughtful conversations",
  "author": "Aryan B Parikh",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "cd client && npm start",
    "server:dev": "node server/index.js",
    "server:start": "node server/index.js",
    "build": "cd client && npm install && npm run build",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "jest --config config/jest.server.config.js",
    "test:auth": "jest tests/integration/auth.test.js --config config/jest.server.config.js",
    "test:chat": "jest tests/integration/chat-persistence.test.js --config config/jest.server.config.js",
    "smoke": "node scripts/smoke.js",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "verify": "npm run lint && npm run test",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "deploy": "bash scripts/deploy.sh",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0"
  },
  "overrides": {
    "nth-check": "^2.0.1",
    "resolve-url-loader": "^5.0.0",
    "webpack-dev-server": "^4.15.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "react-scripts": {
      "webpack-dev-server": "^4.15.2",
      "resolve-url-loader": "^5.0.0",
      "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1"
    }
  }
}
